<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.kidsoncoffee</groupId>
    <artifactId>cheesecakes</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>api</module>
        <module>examples</module>
        <module>specification-processor</module>
        <module>runner</module>
        <!-- AGGREGATE -->
        <module>cheesecakes</module>
    </modules>

    <properties>
        <java.source>8</java.source>
        <java.target>8</java.target>

        <!-- DEPENDENCIES -->
        <apache.commons-lang3.version>3.5</apache.commons-lang3.version>
        <autoservice.version>1.0-rc1</autoservice.version>
        <immutables.version>2.7.5</immutables.version>
        <javapoet.version>1.11.1</javapoet.version>
        <junit.version>4.12</junit.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.source}</source>
                    <target>${java.target}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <!-- PROJECT -->
            <dependency>
                <groupId>com.kidsoncoffee</groupId>
                <artifactId>cheesecakes-all</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kidsoncoffee</groupId>
                <artifactId>cheesecakes-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kidsoncoffee</groupId>
                <artifactId>cheesecakes-specification-processor</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kidsoncoffee</groupId>
                <artifactId>cheesecakes-runner</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- 3rd PARTY -->
            <dependency>
                <groupId>com.google.auto.service</groupId>
                <artifactId>auto-service</artifactId>
                <version>${autoservice.version}</version>
            </dependency>
            <dependency>
                <groupId>com.squareup</groupId>
                <artifactId>javapoet</artifactId>
                <version>${javapoet.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${apache.commons-lang3.version}</version>
            </dependency>
            <dependency>
                <groupId>org.immutables</groupId>
                <artifactId>value</artifactId>
                <version>${immutables.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>